doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title= title
    style.
      html {
        font-family: sans-serif;
        background: #111;
        color: #fff;
      }

      body {
        margin: 0;
        padding: 0;
        height: 100vh;
        text-align: center;
      }

      h1 {
        font-size: 5rem;
        margin: 0;
        padding: 1rem 0 5rem 0;
      }

      p {
        font-size: 2rem;
        margin: 0;
      }

      a {
        color: #fff;
        text-decoration: none;
        border-bottom: 1px solid #fff;
      }

      footer {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 1rem 0;
        background: #111;
      }
  body
    h1 404
    p Page not found. Please check back later
    footer
