doctype html
html(lang="en")
  head
    title= title
    include css.pug
  body
    h1 Mute a member
    form(action='/discord/api/moderation/mute' method='post')
      label(for="token") Discord Bot Token:
        br
        input#token(type="password", name="token" required='')
      label(for="serverID") Server ID:
        br
        input#serverID(type='text' name='serverID' required='' pattern='[0-9]{18,}')
      label(for="userID") User ID:
        br
        input#userID(type='text' name='userID' required='' pattern='[0-9]{18,}')
      label(for="until") Until:
        br
        input#until(type='datetime-local' name='until' required='')
      label(for="reason") Reason:
        br
        input#reason(type='text' name='reason' required='')
      input#submit(type='submit' value='Submit')